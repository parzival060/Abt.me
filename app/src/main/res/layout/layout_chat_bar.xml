<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/usuario_imagen"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:cropToPadding="true"
        android:src="@drawable/recibir_mensaje_layout"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/usuario_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:text="@string/nombre_usuario"
        android:textColor="#FFFFFF"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/usuario_conexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usuario_nombre"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/jitsiicon"
        android:onClick="onButtonClick"
        android:text=""
        android:textColor="#FFFFFF" />
</RelativeLayout>